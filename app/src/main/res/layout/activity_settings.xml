<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DrawerLayoutSettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_google_signin_btn_text_dark_default">

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="296dp"
            android:background="#c0c0c0" />

        <View
            android:id="@+id/view3"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/view3"
            android:layout_alignParentTop="true"
            android:layout_marginTop="498dp"
            android:layout_marginBottom="0dp"
            android:background="#c0c0c0" />

        <View
            android:id="@+id/view2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="395dp"
            android:background="#c0c0c0" />

        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profileImage"
            android:layout_width="201dp"
            android:layout_height="201dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="105dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="105dp"
            android:layout_marginRight="105dp"
            android:layout_marginBottom="483dp"
            android:scaleType="fitCenter"
            android:src="@drawable/propic"
            app:riv_border_color="#fff"
            app:riv_corner_radius="30dip"
            app:riv_mutate_background="true"
            app:riv_oval="true" />

        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cameraPic"
            android:layout_width="72dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="245dp"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="168dp"
            android:layout_marginEnd="94dp"
            android:layout_marginRight="94dp"
            android:layout_marginBottom="483dp"
            android:src="@drawable/camera"
            app:riv_border_color="#fff"
            app:riv_corner_radius="30dip"
            app:riv_mutate_background="true"
            app:riv_oval="true" />

        <LinearLayout
            android:id="@+id/NameLayoutHorizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="301dp"
            android:layout_marginBottom="351dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/NameLogo"
                android:layout_width="63dp"
                android:layout_height="52dp"
                app:srcCompat="@drawable/name_profile" />

            <LinearLayout
                android:id="@+id/NameLayoutVertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NameHeading"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:text="Name"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/NameActual"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:text="Name of the Person"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/StatusLayoutHorizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="400dp"
            android:layout_marginBottom="251dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/StatusLogo"
                android:layout_width="63dp"
                android:layout_height="42dp"
                app:srcCompat="@drawable/about_profile" />

            <LinearLayout
                android:id="@+id/StatusLayoutVertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/StatusHeading"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:text="About"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/StatusActual"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:text="Hi There I am using Let's Chat"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/PhoneNumberHorizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="500dp"
            android:layout_marginBottom="150dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/PhoneNumberLogo"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_alignStart="@+id/PhoneNumberHorizontal"
                app:srcCompat="@drawable/phone_profile" />

            <LinearLayout
                android:id="@+id/PhoneNumberVertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignEnd="@+id/PhoneNumberHorizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/PhoneNumberHeading"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:text="Phone Number"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/PhoneNumberActual"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:text="7680937942"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</android.support.v4.widget.DrawerLayout>