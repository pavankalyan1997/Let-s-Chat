<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DrawerLayoutSettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/common_google_signin_btn_text_dark_default">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarSettings"
                style="@style/ToolBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:titleTextColor="@color/toolBarColor"
                app:theme="@style/ToolBarStyle"/>


            <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profileImage"
                android:layout_width="190dp"
                android:layout_height="185dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="111dp"
                android:layout_marginTop="72dp"
                android:layout_marginRight="110dp"
                android:scaleType="fitCenter"
                android:src="@drawable/propic"
                app:riv_border_color="#fff"
                app:riv_corner_radius="30dip"
                app:riv_mutate_background="true"
                app:riv_oval="true" />

            <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cameraPic"
                android:layout_width="72dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="232dp"
                android:layout_marginTop="177dp"
                android:layout_marginRight="107dp"
                android:src="@drawable/camera"
                app:riv_border_color="#fff"
                app:riv_corner_radius="30dip"
                app:riv_mutate_background="true"
                app:riv_oval="true" />

            <LinearLayout
                android:id="@+id/NameLayoutHorizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="301dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/NameLogo"
                    android:layout_width="63dp"
                    android:layout_height="52dp"
                    app:srcCompat="@drawable/name_profile" />

                <LinearLayout
                    android:id="@+id/NameLayoutVertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/NameHeading"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:text="Name"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/NameActual"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:text="Name of the Person"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/StatusLayoutHorizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="400dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/StatusLogo"
                    android:layout_width="63dp"
                    android:layout_height="42dp"
                    app:srcCompat="@drawable/about_profile" />

                <LinearLayout
                    android:id="@+id/StatusLayoutVertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/StatusHeading"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:text="About"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/StatusActual"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:text="Hi There I am using Let's Chat"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/PhoneNumberHorizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="500dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/PhoneNumberLogo"
                    android:layout_width="62dp"
                    android:layout_height="42dp"
                    android:layout_alignStart="@+id/PhoneNumberHorizontal"
                    app:srcCompat="@drawable/phone_profile" />

                <LinearLayout
                    android:id="@+id/PhoneNumberVertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignEnd="@+id/PhoneNumberHorizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/PhoneNumberHeading"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:text="Phone Number"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/PhoneNumberActual"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:text="7680937942"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>








</androidx.drawerlayout.widget.DrawerLayout>